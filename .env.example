# Database Configuration
DATABASE_URI=postgresql://postgres:postgres@localhost:5432/mortgagemate_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mortgagemate_dev
DB_USER=postgres
DB_PASSWORD=postgres

# LLM Configuration
LLM_PROVIDER=anthropic  # Options: anthropic, openai, mock
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
MOCK_LLM=true  # Set to false to use real API calls

# LLM Implementation Mode
# Options: 'langchain' (new) or 'legacy' (direct SDK calls)
# Use 'legacy' to instantly rollback to pre-LangChain implementation
LLM_IMPLEMENTATION=legacy  # Change to 'langchain' to use new LangChain implementation

# LangSmith Configuration (for LangChain observability)
LANGCHAIN_TRACING_V2=false  # Set to true to enable LangSmith logging
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=mortgagemate-dev

# Application Configuration
NODE_ENV=development
PORT=4321

# Frontend Configuration (for backend to know frontend URL)
FRONTEND_URL=http://localhost:3000

# Frontend Environment Variables (VITE_ prefix for client-side access)
VITE_API_BASE_URL=http://localhost:4321
VITE_APP_NAME=MortgageMate
VITE_NODE_ENV=development
VITE_ENABLE_DEBUG=true

# Session/Auth Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
SESSION_SECRET=your_session_secret_here_change_in_production

# Security
BCRYPT_ROUNDS=12

# Vectorize Configuration (for RAG mortgage data)
VECTORIZE_URL=yourvectorizeurl
VECTORIZE_ORGANIZATION_ID=your_vectorize_organization_id_here
VECTORIZE_API_KEY=your_vectorize_api_key_here
VECTORIZE_PIPELINE_ID=your_vectorize_pipeline_id_here